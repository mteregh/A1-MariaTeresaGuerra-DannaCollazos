<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Challenges</h1>
  <% if can? :create, Challenge %>
    <%= link_to "Nuevo", new_challenge_path, class: "btn btn-primary btn-sm" %>
  <% end %>
</div>

<% if @challenges.any? %>
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Inicio</th>
        <th>Fin</th>
        <th>Creador</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @challenges.each do |challenge| %>
        <tr>
          <td><%= challenge.name %></td>
          <td><%= truncate(challenge.description.to_s, length: 60) %></td>
          <td><%= challenge.start ? l(challenge.start, format: :short) : "—" %></td>
          <td><%= challenge.end ? l(challenge.end, format: :short) : "—" %></td>
          <td><%= challenge.user&.first_name || "—" %></td>
          <td class="text-end">
          <% if can? :show, challenge %>
            <%= link_to "Show", challenge_path(challenge), class: "btn btn-sm btn-outline-primary" %>
          <% end %>
          <% if can? :update, challenge %>
            <%= link_to "Edit", edit_challenge_path(challenge), class: "btn btn-sm btn-outline-secondary" %>
          <% end %>
          <% if can? :destroy, challenge %>
            <%= button_to "Delete", challenge_path(challenge), method: :delete,
                  form: { data: { turbo_confirm: "¿Eliminar este challenge?" } },
                  class: "btn btn-sm btn-outline-danger" %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info mb-0">No hay challenges todavía.</div>
<% end %>
