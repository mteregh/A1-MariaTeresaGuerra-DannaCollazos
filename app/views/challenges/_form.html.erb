<% if @challenge.errors.any? %>
  <div class="alert alert-danger">
    <h5>Se encontraron <%= pluralize(@challenge.errors.count, "error") %>:</h5>
    <ul>
      <% @challenge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @challenge, class: "row g-3" do |f| %>
  <div class="col-md-6">
    <%= f.label :name, "Nombre", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true, maxlength: 100 %>
  </div>

  <div class="col-12">
    <%= f.label :description, "DescripciÃ³n", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 3, required: true %>
  </div>

  <div class="col-md-4">
    <%= f.label :start, "Inicio", class: "form-label" %>
    <%= f.date_field :start, class: "form-control", required: true %>
  </div>

  <div class="col-md-4">
    <%= f.label :end, "Fin", class: "form-label" %>
    <%= f.date_field :end, class: "form-control", required: true %>
  </div>

  <div class="col-md-6">
    <%= f.label :user_id, "Creador", class: "form-label" %>
    <%= f.collection_select :user_id, User.all, :id, :first_name, 
          { prompt: "Selecciona un usuario" }, class: "form-select", required: true %>
  </div>

  <div class="col-12 d-flex gap-2">
    <%= f.submit @challenge.persisted? ? "Actualizar" : "Crear", class: "btn btn-primary" %>
    <%= link_to "Cancelar", challenges_path, class: "btn btn-secondary" %>
  </div>
<% end %>
