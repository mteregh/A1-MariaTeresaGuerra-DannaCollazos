<% if @badge.errors.any? %>
  <div class="alert alert-danger">
    <h5>Se encontraron <%= pluralize(@badge.errors.count, "error") %>:</h5>
    <ul>
      <% @badge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @badge, class: "row g-3" do |f| %>
  <div class="col-md-8">
    <%= f.label :name, "Nombre", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true, maxlength: 100 %>
  </div>

  <div class="col-12 d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancelar", badges_path, class: "btn btn-secondary" %>
  </div>
<% end %>
