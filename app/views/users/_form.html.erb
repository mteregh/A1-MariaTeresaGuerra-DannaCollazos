<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h5 class="alert-heading">
      Se encontraron <%= pluralize(@user.errors.count, "error") %>:
    </h5>
    <ul class="mb-0">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, class: "row g-3" do |f| %>
  <div class="col-md-6">
    <%= f.label :first_name, class: "form-label" %>
    <%= f.text_field :first_name, class: "form-control", required: true, maxlength: 80 %>
  </div>

  <div class="col-md-6">
    <%= f.label :last_name, class: "form-label" %>
    <%= f.text_field :last_name, class: "form-control", required: true, maxlength: 80 %>
  </div>

  <div class="col-md-8">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", required: true, placeholder: "nombre@ejemplo.com" %>
  </div>

  <div class="col-md-4">
    <%= f.label :role, class: "form-label" %>
    <%= f.text_field :role, class: "form-control", placeholder: "admin / challenge-creator / ..." %>
  </div>

  <div class="col-12 d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancelar", (@user.persisted? ? @user : users_path), class: "btn btn-secondary" %>
  </div>
<% end %>
