<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Users</h1>
</div>

<% if @users.any? %>
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Rol</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= [user.first_name, user.last_name].compact.join(" ") %></td>
          <td><%= user.email %></td>
          <td><%= user.role || "—" %></td>
          <td><%= link_to "Show", user_path(user), class: "btn btn-sm btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">No hay usuarios todavía.</div>
<% end %>
